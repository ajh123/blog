---
import VisitorCounter from './VisitorCounter.tsx';
---

<style>
.sidebar {
    width: 200px;
    background: linear-gradient(135deg, #008080, #006666);
    border: 3px outset #c0c0c0;
    padding: 10px;
    color: #ffff00;
    font-family: Arial, sans-serif;
    font-size: 12px;
    box-shadow: 3px 3px 0px #808080;
}

.sidebar h2 {
    background: #000080;
    color: #ffffff;
    padding: 5px;
    margin: 0 0 10px 0;
    border: 2px inset #c0c0c0;
    text-align: center;
    font-size: 14px;
}

.sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0 0 20px 0;
}

.sidebar li {
    margin: 5px 0;
}

.sidebar a {
    color: #ffff00;
    text-decoration: underline;
    font-weight: bold;
}

.sidebar a:hover {
    color: #ff00ff;
    background: #000080;
}
</style>

<div class="sidebar">
    <h2>Navigation</h2>
    <ul>
        <li><a href="/">🏠 Home</a></li>
        <li><a href="/about">📝 About</a></li>
        <li><a href="/posts">📖 Blog</a></li>
        <li><a href="/links">🔗 Links</a></li>
        <li><a href="/guestbook">✍️ Guestbook</a></li>
    </ul>
    
    <div class="counter">
        <p>Visitor Counter:</p>
        <VisitorCounter client:idle />
    </div>
</div>